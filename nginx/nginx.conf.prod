events {}

http {
    include mime.types;

    server {
        listen 80;
        server_name localhost;

        location /api2 {
            proxy_pass http://nest:3002/;
            rewrite ^\/api2\/(.*) /$1 break;
        }

        location /editor/ {
            proxy_pass http://editor:3000/;
            rewrite ^\/editor\/(.*) /$1 break;
        }

        location /test {
            return 200 'Hello from Test';
        }
    }
}